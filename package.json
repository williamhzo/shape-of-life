{
  "name": "shape-of-life",
  "private": true,
  "packageManager": "bun@1.3.6",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:gas": "turbo test:gas",
    "release:gate:sepolia": "turbo test test:gas lint build && bun run smoke:sepolia:round",
    "indexer:sync:round": "cd packages/indexer && bun run sync:round",
    "benchmark:sepolia:max-batch": "bun run packages/contracts/scripts/max-batch-benchmark.ts",
    "lock:sepolia:max-batch": "bun run packages/contracts/scripts/lock-max-batch-from-benchmark.ts",
    "benchmark:sepolia:max-batch:lock": "bun run benchmark:sepolia:max-batch && bun run lock:sepolia:max-batch",
    "rollout:sepolia:max-batch": "bun run packages/contracts/scripts/sepolia-max-batch-rollout.ts",
    "smoke:sepolia:round": "bun run packages/contracts/scripts/sepolia-smoke-round.ts",
    "observe:sepolia:keeper": "bun run packages/contracts/scripts/sepolia-keeper-status.ts",
    "tick:sepolia:keeper": "bun run packages/contracts/scripts/sepolia-keeper-tick.ts",
    "loop:sepolia:keeper": "bun run packages/contracts/scripts/sepolia-keeper-loop.ts",
    "contracts:hardhat:compile": "cd packages/contracts && bun run hardhat:compile",
    "deploy:contracts:shape-sepolia": "cd packages/contracts && bun run deploy:shape-sepolia",
    "deploy:registry:shape-sepolia": "cd packages/contracts && bun run deploy:registry:shape-sepolia",
    "verify:contracts:shape-sepolia": "cd packages/contracts && bun run verify:shape-sepolia",
    "show:contracts:shape-sepolia:round": "cd packages/contracts && bun run show:shape-sepolia:round"
  },
  "devDependencies": {
    "turbo": "^2.8.9"
  }
}
